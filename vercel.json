{
    "version":2,
    "builds": [
        {
            "src": "src/weather/wsgi.py",
            "use": "@vercel/python",
            "config": {"maxLambdaSize": "15mb", "runtime":"python3.10"}
        },
        {
            "src": "build_files.sh",
            "user": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }

        }
    ],
    "routers":[
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "src/weather/wsgi.py"
        }
    ]
}